<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.LatLon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LAT_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Latitude (LAT)"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/latInDecimal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:textAlignment="center"
                android:textSize="42sp"/>

            <TextView
                android:id="@+id/latInDegree"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="99dp"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LNG_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitude (LONG)"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/lngInDecimal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="42sp"/>


            <TextView
                android:id="@+id/lngInDegree"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="46dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:text="Accuracy"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/signnalAccuracy"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4521402201973005/5820659660"/>

    </LinearLayout>

</LinearLayout>

